@{
  Layout = "_Layout";
}
@using Bakery.Models;
<div class="container"> 
<h1>Add a Vendor</h1>
<form class="form" action="/vendor"  method="post">
  <label for="name">Add Name of the vendor</label>
  <input id="name" name="name" type="text" required>
  <label for="description">Add Description of Vendor</label>
  <input id="description" name="description" type="text" required><hr>
  <button class="btn btn-primary" type="submit">Submit</button>
</form>
<h2><a href="/">Return Home</a><hr>
</div>
